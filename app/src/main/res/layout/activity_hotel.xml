<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollSolapa1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/tamanioFoto"
            android:layout_height="@dimen/tamanioFoto"
            android:id="@+id/foto"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descripcion"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direccion"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telefono"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paginaWeb"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/tamanioBoton"
                android:layout_height="@dimen/tamanioBoton"
                android:src="@drawable/facebook"
                android:id="@+id/facebook"/>
            <ImageView
                android:layout_width="@dimen/tamanioBoton"
                android:layout_height="@dimen/tamanioBoton"
                android:src="@drawable/twitter"
                android:id="@+id/twitter"/>
            <ImageView
                android:layout_width="@dimen/tamanioBoton"
                android:layout_height="@dimen/tamanioBoton"
                android:src="@drawable/instagram"
                android:id="@+id/instagram"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>